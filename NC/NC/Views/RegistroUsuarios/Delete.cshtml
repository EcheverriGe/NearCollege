@model NC.Models.Tbl_Usuarios

@{
    ViewBag.Title = "Eliminar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script type="text/javascript">
        function ConfirmDelete() {
            var respuesta = confirm("¿Estás seguro?,  ¡Al darle click en aceptar este usuario será borrado de forma permanente!");

            if (respuesta == true) {

                return true;
            }
            else {
                return false;
            }
        }
    </script>

<h2 class="text-center">Eliminar usuario</h2>
<br />
<div class="alert alert-danger" role="alert">
    <p class="text-center"> ¿Estás seguro acerca de eliminar a este usuario? </p>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nombre:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>

        <dt>
            <label>Apellido:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApellidoUsuario)
        </dd>

        <dt>
            <label>Correo:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CorreoUsuario)
        </dd>

        <dt>
            <label>Rol:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tbl_Roles.NombreRol)
        </dd>

    </dl>

    @using (Html.BeginForm())
     {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
        <input type="submit" onclick="return ConfirmDelete()" value="Eliminar" class="btn btn-danger" /> |
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
        </div>
     }
</div>
