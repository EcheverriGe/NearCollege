@model NC.Models.Tbl_Usuarios

@{
    ViewBag.Title = "Detalles usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Detalles usuario</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nombre:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>

        <dt>
            <label>Apellido:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApellidoUsuario)
        </dd>

        <dt>
            <label>Correo:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CorreoUsuario)
        </dd>

        <dt>
            <label>Rol:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tbl_Roles.NombreRol)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
</p>