@model NC.Models.Tbl_Grados

@{
    ViewBag.Title = "Eliminar grado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script type="text/javascript">
        function ConfirmDelete() {
            var respuesta = confirm("¿Estás seguro?,  ¡Al darle click en aceptar este grado será borrado de forma permanente!");

            if (respuesta == true) {

                return true;
            }
            else {
                return false;
            }
        }
    </script>

<h2 class="text-center">Eliminar grado</h2>
<br />
<div class="alert alert-danger" role="alert">
   <p class="text-center"> ¿Está seguro de eliminar a este grado? </p>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Grado:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreGrado)
        </dd>

        <dt>
            <label>Jornada:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JornadaGrado)
        </dd>

        <dt>
            <label>Disponibilidad:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisponibilidadCupoGrado)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
        <input type="submit" onclick="return ConfirmDelete()" value="Eliminar" class="btn btn-danger" /> |
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>
