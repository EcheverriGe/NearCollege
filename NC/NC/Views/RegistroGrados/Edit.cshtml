@model NC.Models.Tbl_Grados

@{
    ViewBag.Title = "Editar información";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script type="text/javascript">
        function ConfirmDelete() {
            var respuesta = confirm("¿Estás seguro?,  ¡Al darle click en aceptar este grado será editado!");

            if (respuesta == true) {

                return true;
            }
            else {
                return false;
            }
        }
    </script>

<h2 class="text-center">Editar información</h2>
<br />
<div class="alert alert-info" role="alert">
    <p class="text-center"> ¿Está seguro que desea editar la información de este grado? </p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdGrado)

        <div class="form-group">
            @Html.LabelFor(model => model.NombreGrado, "Nombre grado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreGrado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreGrado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JornadaGrado, "Jornada", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JornadaGrado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JornadaGrado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DisponibilidadCupoGrado, "Disponibilidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisponibilidadCupoGrado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DisponibilidadCupoGrado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-actions no-color">
        <input type="submit" onclick="return ConfirmDelete()" value="Guardar cambios" class="btn btn-primary" /> |
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}